{
    "name": "Habit Tracker",
    "description": "A simple and beautiful way to track your habits",
    "version": "1.0",
    "manifest_version": 3,
    "permissions":["storage","scripting"],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
           "16": "/images/icon_16.png",
           "32": "/images/icon_32.png",
           "128": "/images/icon_128.png"
        }
      },
    "icons":{
        "16": "/images/icon_16.png",
        "32": "/images/icon_32.png",
        "128": "/images/icon_128.png"
    }

}